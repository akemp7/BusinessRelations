@{
  Layout = "_Layout";
}

@using Business.Models;
@model Business.Models.Charity;

<h2>@Html.DisplayNameFor(whatever => whatever.Name): @Html.DisplayFor(something => something.Name)</h2>
<h4><em>@Html.DisplayFor(description => description.Description)</em></h4>
<hr />


<h4>Board Members:</h4>
<ul>
    @if (@Model.BoardMembers.Count == 0)
    {
        <p>No boad members found.</p>
    }
    @foreach (BoardMember whoever in @Model.BoardMembers)
    {
        <li>Name: whoever.Name</li>
        <li>More Info: whoever.Description</li>
    }
</ul>

@using (Html.BeginForm())
{
    <input type="submit" value="Delete this charity" />
}

<p>@Html.ActionLink("Back to Charities", "Index")</p>