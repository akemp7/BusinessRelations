@{
  Layout = "_Layout";
}

@using Business.Models;
@model List<Business.Models.Charity>;

<h1>Charities</h1>
<hr />
@if (@Model.Count == 0)
{
    <h3>No charities have been added yet.</h3>
}
@foreach (Charity charityParameter in Model)
{
    <li>@Html.ActionLink($"{charityParameter.Name}", "Details", new { id = charityParameter.CharityId })</li>
}
<p>@Html.ActionLink("Add new charity", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>